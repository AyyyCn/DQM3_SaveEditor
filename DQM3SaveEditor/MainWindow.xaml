<Window x:Class="DQM3SaveEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DQM3SaveEditor"
        xmlns:converters="clr-namespace:DQM3SaveEditor.Converters"
        mc:Ignorable="d"
        Title="DQM3 Save Editor" Height="600" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Enums.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:BoolToDirtyMarkConverter x:Key="DirtyMarkConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Load" Command="{Binding LoadSaveCommand}"/>
                <MenuItem Header="_Save" Command="{Binding SaveSaveCommand}"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="ExitMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="{Binding IsDirty, Converter={StaticResource DirtyMarkConverter}}"/>
        </StatusBar>

        <TabControl SelectedIndex="{Binding SelectedTabIndex}">
            <TabItem Header="Environment">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Season:"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" Margin="5"
                              ItemsSource="{StaticResource Seasons}"
                              SelectedItem="{Binding Environment.Season}"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="Weather:"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" Margin="5"
                              ItemsSource="{StaticResource Weathers}"
                              SelectedItem="{Binding Environment.Weather}"/>

                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                              Orientation="Horizontal" Margin="0,10,0,0">
                        <Label Content="Time:"/>
                        <TextBox Width="30" Text="{Binding Environment.Hour, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Content=":"/>
                        <TextBox Width="30" Text="{Binding Environment.Minute, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Content="Reset Timers" Margin="10,0,0,0"
                                Command="{Binding Environment.ResetTimersCommand}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Monsters">
                <DockPanel>
                    <ToolBar DockPanel.Dock="Top">
                        <Button Content="Add" Command="{Binding Monsters.AddMonsterCommand}"/>
                        <Button Content="Edit" Command="{Binding Monsters.EditSelectedCommand}"/>
                        <Button Content="Delete" Command="{Binding Monsters.DeleteSelectedCommand}"/>
                    </ToolBar>
                    <DataGrid ItemsSource="{Binding Monsters.Monsters}"
                             SelectedItem="{Binding Monsters.SelectedMonster}"
                             AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Kind" Binding="{Binding Kind}"/>
                            <DataGridTextColumn Header="Level" Binding="{Binding Level}"/>
                            <DataGridTextColumn Header="Size" Binding="{Binding Size}"/>
                            <DataGridTextColumn Header="Unspent Points" Binding="{Binding UnspentPoints}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>

            <TabItem Header="Inventory">
                <DockPanel>
                    <ToolBar DockPanel.Dock="Top">
                        <Button Content="Add Item" Command="{Binding Inventory.AddItemCommand}"/>
                        <Button Content="Remove Selected" Command="{Binding Inventory.RemoveSelectedCommand}"/>
                    </ToolBar>
                    <DataGrid ItemsSource="{Binding Inventory.Items}"
                             SelectedItem="{Binding Inventory.SelectedItem}"
                             AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Item Code" Binding="{Binding Code}"/>
                            <DataGridTextColumn Header="Count" Binding="{Binding Count}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>

            <TabItem Header="Library">
                <StackPanel Margin="10">
                    <Button Content="Unlock All Books" Margin="0,0,0,10"
                            Command="{Binding Library.UnlockAllBooksCommand}"/>
                    <Button Content="Unlock All Monsters"
                            Command="{Binding Library.UnlockAllMonstersCommand}"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="Equipment">
                <TextBlock Text="Coming soon..." HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
